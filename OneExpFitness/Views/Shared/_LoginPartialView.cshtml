@using Microsoft.AspNetCore.Identity
@inject SignInManager<OneExpFitness.Repository.Models.ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    using (Html.BeginForm("LogOut","Account", FormMethod.Post, new { @id = "LogOutForm" }))
    {
    <ul class="nav navbar-nav pull-right">
        <li>
            <a href="#">Hello @User.Identity.Name!</a></li>
        <li>
            <a href="#" onclick="document.getElementById('LogOutForm').submit()">Log Out</a>
        </li>
        
    </ul>
       
    }
}
else
{
    <ul class="nav navbar-nav pull-right">
        <li>
            <a asp-action="Register" asp-controller="Account">Register</a>
        </li>
    </ul>
}